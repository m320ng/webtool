<script type="text/javascript">
var sizeformat = function(b) {
    if (1024 * 1024 * 1024 < b)
        return (b / (1024 * 1024 * 1024)).toFixed(2) + 'G';
    else if (1024 * 1024 < b)
        return (b / (1024 * 1024)).toFixed(2) + 'MB';
    else if (1024 < b)
        return parseInt(b / 1024) + 'KB';
    else
        return b;
}

// QR Code
