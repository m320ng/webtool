    $('#qrcode-result').attr('src', 'http://chart.apis.google.com/chart?cht=qr&chs=200x200&chl='+encodeURIComponent(url)+'&choe=UTF-8');
}
$('#qrcode-url').on('keydown', function(e) {
	if (e.keyCode==13) {
